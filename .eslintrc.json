{
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "env": {
        "browser": true
    },
    "rules": {
        "import/no-extraneous-dependencies": [
            "error", {"devDependencies": true, "optionalDependencies": false, "peerDependencies": false}
        ],
        "no-underscore-dangle": [
            "error", {"allowAfterThis": true}
        ],
        "max-len": [
            "error", 120
        ],
        "indent": [
            "error", 4
        ],
        "curly": [
            "error", "all"
        ]
    }
}
